MainWindow
  image-source: images/base_2
  size: 555 466
  text: INFORMAÇÕES DE CAPTURA
  color: #aeebff
  font: future-earth-18
  text-offset: 10 12
  @onEscape: self:hide()
  UIWidget
    phantom: true
    size: 134 31
    image-source: images/search
    margin-bottom: 2
    margin-left: 5
    anchors.bottom: parent.bottom
    anchors.left: parent.left
  UITextEdit
    id: search
    selection-color: black
    selection-background-color: white
    size: 100 31
    margin-bottom: -6
    margin-left: 34
    anchors.bottom: parent.bottom
    anchors.left: parent.left
    color: #66c8ff
    font: window

  UIButton
    id: closeButton
    anchors.top: parent.top
    anchors.right: parent.right
    margin-top: 8
    margin-right: 2
    size: 24 25
    image-source: /images/ui/closeButton
    @onClick: self:getParent():hide()
    change-cursor-image: true
    cursor: pointer
  UIWidget
    id: panelPokes
    size: 450 340
    anchors.verticalCenter: parent.verticalCenter
    anchors.horizontalCenter: parent.horizontalCenter
    margin-top: -10
    margin-left: 0
    layout:
      type: grid
      cell-size: 110 110
      num-lines: 3
      num-columns: 4
      flow: false
      cell-spacing: 5
  Label
    id: pages
    color: #aeebff
    text-auto-resize: true
    anchors.horizontalCenter: parent.horizontalCenter
    anchors.bottom: parent.bottom
    margin-bottom: 3
    font: future-earth-26

  UIWidget
    id: doubleLeft
    size: 32 34
    image-source: images/double_left
    anchors.bottom: parent.bottom
    anchors.horizontalCenter: parent.horizontalCenter
    margin-right: 100
    margin-bottom: 1
    change-cursor-image: true
    cursor: pointer
    @onClick: firstPage()

  UIWidget
    id: left
    size: 32 34
    image-source: images/left
    anchors.bottom: doubleLeft.bottom
    anchors.left: doubleLeft.right
    margin-left: 3
    change-cursor-image: true
    cursor: pointer
    @onClick: previousPage()

  UIWidget
    id: doubleRight
    size: 32 34
    image-source: images/double_right
    anchors.bottom: parent.bottom
    anchors.horizontalCenter: parent.horizontalCenter
    margin-left: 100
    change-cursor-image: true
    cursor: pointer
    @onClick: lastPage()

  UIWidget
    id: right
    size: 32 34
    image-source: images/right
    anchors.bottom: doubleRight.bottom
    margin-right: 3
    anchors.right: doubleRight.left
    change-cursor-image: true
    cursor: pointer
    @onClick: nextPage()
  UIButton
    id: infos
    size: 24 24
    image-source: images/info
    anchors.top: parent.top
    anchors.left: parent.left
    margin-top: 30
    margin-left: 6
    tooltip: Clique duas vezes no pokémon, para mais informações sobre a captura.