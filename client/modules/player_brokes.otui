      type: grid
      cell-size: 24 24
      num-lines: 4
      num-columns: 9
      cell-spacing: -5
  UIWidget
    id: panelBestBalls
    size: 175 80
    margin-bottom: 21
    margin-left: 24
    anchors.bottom: parent.bottom
    anchors.left: parent.left
    margin-top: 5
    layout:
      type: grid
      cell-size: 24 24
      num-lines: 4
      num-columns: 9
      cell-spacing: -5
  UILabel
    id: pokemonName
    text-auto-resize: true
